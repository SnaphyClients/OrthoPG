<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.NewCase.CaseDescriptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:id="@+id/fragment_case_description_linear_layout1">

        <ImageButton
            android:id="@+id/fragment_case_description_image_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_icon"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <EditText
        android:id="@+id/fragment_case_description_edittext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars = "vertical"
        android:layout_below="@+id/fragment_case_description_linear_layout1"
        android:background="@android:color/transparent"
        android:textSize="25sp"
        android:hint="Description"
        android:textStyle="bold"
        android:focusable="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textColor="#999"
        android:inputType="textMultiLine"
        android:textColorHint="#999">
        <requestFocus/>
    </EditText>

    <Button
        android:id="@+id/fragment_case_description_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:text="POST CASE"
        android:textStyle="bold"
        android:textSize="17sp"/>

</RelativeLayout>
