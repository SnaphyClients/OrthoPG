<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/white"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.NewCase.CaseDescriptionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:id="@+id/fragment_case_description_linear_layout1">

        <ImageButton
            android:id="@+id/fragment_case_description_image_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_icon"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post As Anonymous"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:id="@+id/fragment_case_description_checkbox"/>

        </LinearLayout>


    </RelativeLayout>

    <EditText
        android:id="@+id/fragment_case_description_edittext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars = "vertical"
        android:layout_below="@+id/fragment_case_description_linear_layout1"
        android:background="@android:color/transparent"
        android:textSize="25sp"
        android:hint="Description"
        android:textStyle="bold"
        android:focusable="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textColor="#999"
        android:inputType="textMultiLine"
        android:textColorHint="#999">
        <requestFocus/>
    </EditText>

    <Button
        android:id="@+id/fragment_case_description_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:text="POST CASE"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/fragment_case_description_progressBar"
        android:layout_centerInParent="true"
        app:mlpb_progress_stoke_width="3dp"
        app:mlpb_progress_color="#566da9"/>

</RelativeLayout>
