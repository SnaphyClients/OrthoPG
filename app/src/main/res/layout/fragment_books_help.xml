<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/bookHelp"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.HelpFragment.BooksHelpFragment">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/delete"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:id="@+id/fragment_books_help_imagebutton1"
        android:padding="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_search"
            android:layout_centerHorizontal="true"
            android:id="@+id/fragment_case_help_imageview1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Books"
            android:textSize="30sp"
            android:layout_marginTop="5dp"
            android:id="@+id/fragment_case_help_textview1"
            android:layout_below="@+id/fragment_case_help_imageview1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="Get all past year solved books under one roof"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="45dp"
            android:id="@+id/fragment_case_help_textview2"
            android:layout_below="@+id/fragment_case_help_textview1"/>

    </RelativeLayout>

</RelativeLayout>
