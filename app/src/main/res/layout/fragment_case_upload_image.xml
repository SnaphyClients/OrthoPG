    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    android:id="@+id/fragment_case_upload_image_container"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.NewCase.CaseUploadImageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:id="@+id/fragment_case_upload_image_linear_layout1">

        <ImageButton
            android:id="@+id/fragment_case_upload_image_imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_icon"
            android:background="@android:color/transparent"/>

    </LinearLayout>

