        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/fragment_case_upload_image_linear_layout2"
        android:padding="15dp"
        android:layout_below="@+id/fragment_case_upload_image_linear_layout1">

        <ImageButton
            android:id="@+id/fragment_case_upload_image_imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unchecked"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Post as Anonymous"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#AAA"
            android:gravity="center"
            android:paddingLeft="15dp"/>

    </LinearLayout>-->
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/lineColor"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:id="@+id/fragment_case_upload_image_view1"
        android:layout_below="@+id/fragment_case_upload_image_linear_layout1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/fragment_case_upload_image_view1"
        android:layout_above="@+id/fragment_case_upload_image_recycler_view"
        android:id="@+id/fragment_case_upload_image_linear_layout3">

        <ImageButton
            android:id="@+id/fragment_case_upload_image_imageButton3"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/capture_image"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/fragment_case_upload_image_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Image"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#999"
            android:paddingTop="5dp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/fragment_case_upload_image_recycler_view"
        android:layout_above="@+id/fragment_case_upload_image_button1">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/fragment_case_upload_image_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Next"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"/>




</RelativeLayout>
