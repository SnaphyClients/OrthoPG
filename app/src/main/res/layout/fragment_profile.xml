<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        tools:context="com.orthopg.snaphy.orthopg.Fragment.ProfileFragment.ProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_profile_container"
        android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_profile_relative_layout1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_profile_linear_layout1">

            <TextView
                android:id="@+id/fragment_profile_textview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Logout"
                android:layout_marginRight="15dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/loginButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/fragment_profile_linear_layout1"
            android:id="@+id/fragment_profile_linear_layout2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/layout_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_pic"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_profile_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ravigupta9363@gmail.com"
                    android:textColor="@color/buttonColor"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_profile_textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DC2/256/145"
                        android:textColor="@color/buttonColor"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_gravity="right" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_profile_textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orthopedic Trauma"
                        android:textColor="@color/buttonColor"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_gravity="right" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ravi Gupta"
            android:layout_below="@+id/fragment_profile_linear_layout2"
            android:id="@+id/fragment_profile_textview5"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"/>




    </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/fragment_profile_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/fragment_profile_relative_layout1"
            app:tabMode="scrollable"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/colorPrimaryDark"
            android:background="@color/white"
            app:tabTextColor="@color/headingColor"
            app:tabIndicatorHeight="3dp"
            android:layout_marginTop="15dp"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabSelectedTextColor="@color/headingColor" />


        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_profile_view_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_profile_tab_layout">
        </android.support.v4.view.ViewPager>

    </RelativeLayout>


