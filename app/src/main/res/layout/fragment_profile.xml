<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        tools:context="com.orthopg.snaphy.orthopg.Fragment.ProfileFragment.ProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/fragment_profile_container"
        android:background="@color/white">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="25dp"
       android:layout_marginLeft="15dp"
       android:layout_below="@+id/fragment_profile_relative_layout1">

       <Button
           android:id="@+id/fragment_menu_button1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:text="About us"
           android:textAllCaps="false"
           android:gravity="left|center"
           android:textColor="#555"
           android:paddingLeft="15dp"
           android:layout_marginTop="10dp"/>

       <Button
           android:id="@+id/fragment_menu_button2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:text="Contact us"
           android:textAllCaps="false"
           android:gravity="left|center"
           android:textColor="#555"
           android:paddingLeft="15dp"/>

       <Button
           android:id="@+id/fragment_menu_button3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:text="FAQs"
           android:textAllCaps="false"
           android:gravity="left|center"
           android:textColor="#555"
           android:paddingLeft="15dp"/>

       <Button
           android:id="@+id/fragment_menu_button4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:text="Feedback"
           android:textAllCaps="false"
           android:gravity="left|center"
           android:textColor="#555"
           android:paddingLeft="15dp"/>

       <Button
           android:id="@+id/fragment_menu_button5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:text="Share"
           android:textAllCaps="false"
           android:textColor="#555"
           android:gravity="left|center"
           android:paddingLeft="15dp"/>

       <Button
           android:id="@+id/fragment_menu_button6"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:text="Terms and Conditions"
           android:textAllCaps="false"
           android:textColor="#555"
           android:gravity="left|center"
           android:paddingLeft="15dp"/>

   </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_profile_relative_layout1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_profile_linear_layout1">

            <TextView
                android:id="@+id/fragment_profile_textview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Logout"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:layout_gravity="right"
                android:background="@drawable/curved_rectangle_danger"
                android:gravity="right"
                android:textColor="@color/loginButton"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/fragment_profile_linear_layout1"
            android:id="@+id/fragment_profile_linear_layout2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp">

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/layout_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:textSize="9dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/fragment_profile_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/buttonColor"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration Number"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="9dp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/fragment_profile_textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/buttonColor"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>

                    <ImageButton
                        android:id="@+id/fragment_profile_imagebutton1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="@android:color/transparent"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/edit"/>

                </RelativeLayout>

                <!--<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_profile_textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orthopedic Trauma"
                        android:textColor="@color/buttonColor"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                    <ImageButton
                        android:id="@+id/fragment_profile_imagebutton2"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="@android:color/transparent"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/edit"/>

                </RelativeLayout>-->

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/fragment_profile_linear_layout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/fragment_profile_textview5"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:id="@+id/fragment_profile_imagebutton2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"
            android:layout_gravity="right|center"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/edit"/>

    </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>


