<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="30dp" android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_case_list_linear_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/layout_case_list_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/anonymous"
            app:civ_border_color="#FFAAAAAA"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/layout_case_list_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:paddingTop="4dp"
            android:text="Medical Epicondylitis (Golfer's and Baseball Elbow)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/layout_case_list_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Anonymous"/>

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/lineColor"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"></View>

            <TextView
                android:id="@+id/layout_case_list_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="9 hours ago"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:paddingTop="5dp">

        <TextView
            android:id="@+id/layout_case_list_textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="case"
            android:layout_marginTop="0dp"
            android:background="@drawable/curved_rectangle"
            android:textColor="@color/primary"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="4dp"/>

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/layout_case_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/layout_case_list_textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textSize="12sp"
        android:maxLength="256"
        android:text="This patient underwent a diagnostic arthro.The patellofemoral comparment, medial gutter,and medial meniscus were normal. "/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <ImageButton
            android:id="@+id/layout_case_list_button1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/edit"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/layout_case_list_button2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/delete_case"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_gravity="right"
            android:gravity="right">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/layout_case_list_imagebutton1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="1dp"
                        android:src="@mipmap/save_unselected"
                        android:background="@android:color/transparent"/>


                    <!--<View
                        android:layout_width="1dp"
                        android:id="@+id/view2"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:background="@color/headingColor"></View>-->

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_heading_color"/>

                    <TextView
                        android:id="@+id/layout_case_list_textview9"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="5"
                        android:layout_marginTop="3dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/headingColor" />


                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:id="@+id/view1"
                android:layout_height="14dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/headingColor"></View>

           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="0dp">

              <!-- <ImageView
                   android:layout_width="80dp"
                   android:layout_height="30dp"
                   android:background="@drawable/rectangle"
                   android:layout_marginTop="5dp"
                   android:paddingLeft="10dp"/>
-->
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/layout_case_list_imagebutton2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/like_unselected"
                        android:layout_gravity="center"
                        android:layout_alignLeft="@+id/view1"
                        android:background="@android:color/transparent"/>

                  <!--  <View
                        android:layout_width="1dp"
                        android:id="@+id/view1"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:background="@color/headingColor"></View>-->

                   <ImageView
                       android:layout_width="3dp"
                       android:layout_height="3dp"
                       android:layout_marginTop="4dp"
                       android:layout_gravity="center"
                       android:background="@drawable/circle_heading_color"/>

                   <TextView
                       android:id="@+id/layout_case_list_textview8"
                       android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:text="5"
                       android:textSize="14sp"
                       android:textColor="@color/headingColor"
                       android:layout_marginTop="13dp"
                       android:layout_marginLeft="5dp"
                       android:gravity="center_vertical"/>

               </LinearLayout>

           </RelativeLayout>

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_case_list_imageview1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/selected"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/layout_case_list_textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadish Surana"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:paddingTop="3dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/layout_case_list_textview7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="There was a radial tear of the lateral meniscus in the white-white zone which required partial meniscectomy. "/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"/>



</LinearLayout>