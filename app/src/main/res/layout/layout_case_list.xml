<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="30dp" android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/layout_case_list_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_pic"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/layout_case_list_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingLeft="5dp"
            android:paddingTop="4dp"
            android:text="Medical Epicondylitis (Golfer's and Baseball Elbow)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/layout_case_list_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Dr Ravi Gupta"/>

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/lineColor"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"></View>

            <TextView
                android:id="@+id/layout_case_list_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="9 hours ago"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right">

        <TextView
            android:id="@+id/layout_case_list_textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="case"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="6dp"/>

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/layout_case_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/layout_case_list_textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textSize="12sp"
        android:text="This patient underwent a diagnostic arthro.The patellofemoral comparment, medial gutter,and medial meniscus were normal. "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <ImageButton
            android:id="@+id/layout_case_list_button1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/edit"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/layout_case_list_button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/delete_case"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_gravity="right"
            android:gravity="right">

        <ImageButton
            android:id="@+id/layout_case_list_imagebutton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|right"
            android:cropToPadding="true"
            android:src="@mipmap/save_unselected"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/layout_case_list_imagebutton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/like_selected"
            android:layout_gravity="top"
            android:background="@android:color/transparent"/>

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_case_list_imageview1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/selected"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/layout_case_list_textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadish Surana"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:paddingTop="3dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/layout_case_list_textview7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="There was a radial tear of the lateral meniscus in the white-white zone which required partial meniscectomy. "/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"/>



</LinearLayout>