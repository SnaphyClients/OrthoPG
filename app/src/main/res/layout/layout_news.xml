<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="15dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/book_cover"
        android:adjustViewBounds="true"
        android:id="@+id/layout_news_imageview1"/>

    <TextView
        android:id="@+id/layout_news_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="case"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Doctor in War"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:id="@+id/layout_news_textview2"/>

    <TextView
        android:id="@+id/layout_news_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="The War Doctor is an incarnation of the Doctor,[6] the protagonist of the BBC science fiction television programme Doctor Who. He is portrayed by English actor John Hurt."/>


</LinearLayout>