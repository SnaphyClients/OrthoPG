<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#EEEEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.BooksFragment.ViewAllBooksFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/fragment_view_all_books_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/fragment_view_all_books_imageview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cross"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:padding="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/fragment_view_all_books_imageview1"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:id="@+id/fragment_view_all_books_textview1"
                android:text="Category name"/>


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_view_all_books_toolbar"
        android:id="@+id/fragment_view_all_books_recyclerview">

    </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
