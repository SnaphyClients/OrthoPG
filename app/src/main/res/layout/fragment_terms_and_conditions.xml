<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.MenuFragment.TermsAndConditionsFragment">

    <ImageButton
        android:id="@+id/fragment_tandc_image_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cross"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:padding="0dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Terms and Conditions"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/fragment_tandc_textview1"
        android:layout_below="@+id/fragment_tandc_image_button1"/>


    <TextView
        android:layout_below="@+id/fragment_tandc_textview1"
        android:id="@+id/fragment_tandc_textview2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Terms and Conditions"
        android:padding="15dp"/>

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/fragment_tandc_progressBar"
        android:layout_centerInParent="true"
        app:mlpb_progress_stoke_width="3dp"
        app:mlpb_progress_color="#566da9"/>

</RelativeLayout>
