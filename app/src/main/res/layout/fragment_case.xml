<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.CaseFragment.CaseFragment" >

    <android.support.design.widget.CoordinatorLayout
      android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_case_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />

        </android.support.v4.widget.SwipeRefreshLayout>


    </RelativeLayout>


    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f7f7f7">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/fragment_case_linear_layout">

                    <Button
                        android:id="@+id/fragment_case_button1"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="Trending"
                        android:textSize="11sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/border_shadow"
                        android:textColor="@color/buttonColor"/>

                    <Button
                        android:id="@+id/fragment_case_button2"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:text="Latest"
                        android:textSize="11sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/border_shadow"
                        android:textColor="@color/colorPrimary"/>


                    <Button
                        android:id="@+id/fragment_case_button3"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="Unsolved"
                        android:textSize="11sp"
                        android:background="@drawable/border_shadow"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:textColor="@color/buttonColor"/>


                    <Button
                        android:id="@+id/fragment_case_button6"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="Saved"
                        android:textSize="11sp"
                        android:background="@drawable/border_shadow"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/buttonColor"/>


                    <Button
                        android:id="@+id/fragment_case_button5"
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:text="Posted"
                        android:textSize="12sp"
                        android:background="@drawable/border_shadow"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/buttonColor"/>

                </LinearLayout>

            </LinearLayout>

            </HorizontalScrollView>
            


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>

    <Button
        android:id="@+id/fragment_case_button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post a Case"
        android:textAllCaps="false"
        android:textColor="@color/buttonColor"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:paddingLeft="30dp"
        android:drawableLeft="@mipmap/post"
        android:gravity="left|center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#DDDDDD"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"/>

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/fragment_case_progressBar"
        android:layout_centerInParent="true"
        app:mlpb_progress_stoke_width="3dp"
        app:mlpb_progress_color="#566da9"/>

</RelativeLayout>


