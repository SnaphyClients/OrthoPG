<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp">

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/default_curved_rectangle"
            android:id="@+id/layout_comment_linear_layout_1"
            android:gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/layout_comment_imageview1"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@mipmap/unselected"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


        <TextView
            android:id="@+id/layout_comment_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:paddingTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/layout_comment_linear_layout_1"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp">


        <TextView
            android:id="@+id/layout_comment_imagebutton1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/curved_rectangle_warning"
            android:text="edit"
            android:textColor="@color/warning"
            android:textSize="10sp"
            android:layout_toLeftOf="@+id/layout_comment_imagebutton2"/>

        <TextView
            android:id="@+id/layout_comment_imagebutton2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/curved_rectangle_danger"
            android:text="delete"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/danger"
            android:layout_marginRight="7dp"/>

    </LinearLayout>

    <!--<TextView
        android:id="@+id/layout_comment_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

         />-->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="30dp"
        android:paddingLeft="30dp">

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/layout_comment_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="12sp" />

        <!-- Optional parameter animation_duration: sets the duration of the expand animation -->

        <Button
            android:id="@+id/button_toggle"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:text="more..."
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:layout_marginRight="12dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1"
        android:layout_marginTop="12dp"/>


</LinearLayout>