<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <ImageView
            android:id="@+id/layout_comment_imageview1"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:src="@mipmap/unselected"
            android:layout_marginLeft="7dp" />

        <TextView
            android:id="@+id/layout_comment_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadish Surana"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:paddingTop="0dp"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:src="@mipmap/edit"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:id="@+id/layout_comment_imagebutton1"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/layout_comment_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="7dp"
        android:text="There was a radial tear of the lateral meniscus in the white-white zone which required partial meniscectomy. "/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"/>


</LinearLayout>