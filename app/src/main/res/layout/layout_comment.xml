<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/layout_comment_imageview1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/unselected"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/layout_comment_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadish Surana"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:paddingTop="0dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/layout_comment_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="There was a radial tear of the lateral meniscus in the white-white zone which required partial meniscectomy. "/>


</LinearLayout>