<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:id="@+id/layout_order_history_relative_layout1">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/layout_order_history_imageview1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview1"
                android:layout_toRightOf="@+id/layout_order_history_imageview1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_order_history_textview1"
                android:layout_toRightOf="@+id/layout_order_history_imageview1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:maxLines="1"
                android:textSize="12sp"
                android:id="@+id/layout_order_history_textview2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview6"
                android:layout_below="@+id/layout_order_history_textview2"
                android:layout_toRightOf="@+id/layout_order_history_imageview1"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:text="Order No.:"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview7"
                android:layout_below="@+id/layout_order_history_textview2"
                android:layout_toRightOf="@+id/layout_order_history_textview6"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:text=""
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview3"
                android:layout_below="@+id/layout_order_history_textview6"
                android:layout_toRightOf="@+id/layout_order_history_imageview1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#333"
                android:text="Price:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview4"
                android:layout_below="@+id/layout_order_history_textview6"
                android:layout_toRightOf="@+id/layout_order_history_textview3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#333"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview9"
                android:layout_below="@+id/layout_order_history_textview4"
                android:layout_marginRight="10dp"
                android:text="Payment Status"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/layout_order_history_imageview1"
                android:textAllCaps="true"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview8"
                android:layout_below="@+id/layout_order_history_textview4"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/layout_order_history_textview9"
                android:textAllCaps="true"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview5"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:layout_below="@+id/layout_order_history_textview1"
                android:layout_marginRight="10dp"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:text=""
                android:textAllCaps="true" />

            </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>