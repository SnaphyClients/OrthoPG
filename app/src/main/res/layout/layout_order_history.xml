<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-5dp"
        android:layout_marginBottom="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_order_history_relative_layout1">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/sampleimage"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/layout_order_history_imageview1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview1"
                android:layout_toRightOf="@+id/layout_order_history_imageview1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Book Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_order_history_textview1"
                android:layout_toRightOf="@+id/layout_order_history_imageview1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Transaction Id"
                android:maxLines="3"
                android:id="@+id/layout_order_history_textview2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview6"
                android:layout_below="@+id/layout_order_history_textview2"
                android:layout_toRightOf="@+id/layout_order_history_imageview1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Order No.:"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview7"
                android:layout_below="@+id/layout_order_history_textview2"
                android:layout_toRightOf="@+id/layout_order_history_textview6"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="23"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview3"
                android:layout_below="@+id/layout_order_history_textview6"
                android:layout_toRightOf="@+id/layout_order_history_imageview1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Price:"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview4"
                android:layout_below="@+id/layout_order_history_textview6"
                android:layout_toRightOf="@+id/layout_order_history_textview3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="25"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview8"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/layout_order_history_textview2"
                android:layout_marginRight="40dp"
                android:text="Failed"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_order_history_textview5"
                android:layout_alignParentRight="true"
               android:gravity="bottom"
               android:layout_below="@+id/layout_order_history_textview4"
                android:layout_marginRight="20dp"
                android:text="Purchased"
                android:layout_marginBottom="5dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>