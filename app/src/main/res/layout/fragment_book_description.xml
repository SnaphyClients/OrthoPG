<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#EEEEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.BooksFragment.BookDescriptionFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:alpha="0.3"
        android:id="@+id/fragment_book_description_cover"
        android:background="@color/headingColor"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cross"
        android:id="@+id/fragment_book_description_imageview1"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fragment_book_description_imageview1"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:id="@+id/fragment_view_all_books_textview1"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/fragment_book_description_linearLayout2"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="220dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/fragment_book_description_imageview2" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_book_description_linearLayout2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_book_description_relativelayout1">


            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/fragment_book_description_textview1"
                android:layout_alignParentRight="true"
                android:text="Download Sample"
                android:background="#fe6969"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textStyle="bold"
                android:id="@+id/fragment_book_description_button1"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/fragment_book_description_textview1"
                android:layout_alignParentRight="true"
                android:background="@color/background"
                android:layout_marginTop="20dp"
                android:rotation="45"
                android:id="@+id/fragment_book_description_textview2"
                android:layout_marginRight="180dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/fragment_book_description_button1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:weightSum="2"
                android:id="@+id/fragment_book_description_linearLayout">



                <Button
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:background="@drawable/curved_rectangle_info_filled"
                    android:text=""
                    android:textColor="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_weight="1"
                    android:id="@+id/fragment_book_description_button3"
                    android:textAllCaps="false"
                    android:layout_marginRight="5dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:background="@drawable/curved_rectangle_info_filled"
                    android:text=""
                    android:textColor="@color/white"
                    android:paddingLeft="15dp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:id="@+id/fragment_book_description_button4"
                    android:paddingRight="15dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_book_description_textview6"
                android:layout_below="@+id/fragment_book_description_linearLayout"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:text="Description :"
                android:textColor="#555" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_book_description_textview7"
                android:layout_below="@+id/fragment_book_description_textview6"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="3dp"
                android:id="@+id/fragment_book_description_textview1"
                android:textColor="@color/primary"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>


    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_book_description_imageview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@mipmap/share"
        app:elevation="12dp"
        android:layout_marginRight="22dp"
        android:layout_alignTop="@+id/fragment_book_description_linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="50dp"/>

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/LinearProgress"
        android:layout_marginBottom="-8dp"
        android:layout_marginTop="-6dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:id="@+id/fragment_book_description_progressBar" />


</RelativeLayout>
