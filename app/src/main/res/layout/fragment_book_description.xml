<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#EEEEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.BooksFragment.BookDescriptionFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/fragment_book_description_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/fragment_book_description_imageview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cross"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:padding="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/fragment_book_description_imageview1"
                android:layout_marginLeft="20dp"
                android:id="@+id/fragment_view_all_books_textview1"
                android:text="Book Name"/>


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_book_description_toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_book_description_relativelayout1"
            >


            <ImageView
                android:layout_width="130dp"
                android:layout_marginLeft="10dp"
                android:layout_height="170dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:id="@+id/fragment_book_description_imageview2"
                android:src="@drawable/sampleimage"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/fragment_book_description_imageview2"
                android:text="Book name"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/fragment_book_description_textview1"
                android:layout_marginLeft="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_book_description_textview1"
                android:layout_toRightOf="@+id/fragment_book_description_imageview2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Price:"
                android:id="@+id/fragment_book_description_textview2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_book_description_textview3"
                android:layout_toRightOf="@+id/fragment_book_description_textview2"
                android:layout_below="@+id/fragment_book_description_textview1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="25"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/fragment_book_description_button3"
                android:layout_toRightOf="@+id/fragment_book_description_imageview2"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/fragment_book_description_textview2"
                android:background="@drawable/curved_rectangle_success_filled"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:text="Download"
                android:textSize="10sp"
                android:textAllCaps="false"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_book_description_button3"
                android:layout_toRightOf="@+id/fragment_book_description_imageview2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Price:"
                android:id="@+id/fragment_book_description_textview4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_book_description_textview5"
                android:layout_toRightOf="@+id/fragment_book_description_textview2"
                android:layout_below="@+id/fragment_book_description_button3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="25"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/fragment_book_description_button4"
                android:layout_toRightOf="@+id/fragment_book_description_imageview2"
                android:layout_below="@+id/fragment_book_description_textview4"
                android:layout_marginLeft="20dp"
                android:background="@drawable/curved_rectangle_success_filled"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:text="Buy"
                android:textSize="10sp"
                android:textAllCaps="false"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:text="Download Sample"
                android:layout_below="@+id/fragment_book_description_imageview2"
                android:textAllCaps="false"
                android:background="@drawable/curved_rectangle_info"
                android:textColor="@color/info"
                android:id="@+id/fragment_book_description_button1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_book_description_textview6"
                android:layout_below="@+id/fragment_book_description_button1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:text="Description :"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_book_description_textview7"
                android:layout_below="@+id/fragment_book_description_textview6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="This is description of book"/>





        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
