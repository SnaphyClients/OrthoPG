<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/loginBackground"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.LoginFragment.LoginFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:weightSum="2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="center|top"
        android:gravity="top">

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/circle_white"
            android:text="1"
            android:textColor="#333"
            android:layout_marginTop="100dp"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="5dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="110dp"
            android:background="@drawable/rectangle_white"
            android:alpha="0.7"/>

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/circle_white"
            android:text="2"
            android:textColor="#333"
            android:layout_gravity="center|top"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:alpha="0.7"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OrthoPG"
            android:layout_centerHorizontal="true"
            android:textColor="@color/loginBackground"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:id="@+id/fragment_login_texview1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redefining PG Teaching"
            android:layout_centerHorizontal="true"
            android:textColor="#777"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginBottom="50dp"
            android:id="@+id/fragment_login_texview2" />

        <ImageView
            android:layout_below="@+id/fragment_login_texview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/doctor"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/fragment_login_imageview1"/>

        <Button
            android:layout_below="@+id/fragment_login_imageview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/loginButton"
            android:text="google+"
            android:textColor="@color/white"
            android:id="@+id/fragment_login_button1"
            android:textAllCaps="false"
            android:textSize="18sp"/>

    </LinearLayout>

    </RelativeLayout>

  </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:src="@mipmap/lock"
        android:padding="28dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>
