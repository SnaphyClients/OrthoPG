<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/headingColor"
    tools:context="com.orthopg.snaphy.orthopg.Fragment.LoginFragment.LoginFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OrthoPG"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:id="@+id/fragment_login_textview1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/doctor"
            android:layout_marginTop="25dp"
            android:id="@+id/fragment_login_imageview1"
            android:layout_below="@+id/fragment_login_textview1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="200dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in with"
        android:layout_above="@+id/fragment_login_imageview2"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:id="@+id/fragment_login_imageview2"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/google_plus"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:id="@+id/fragment_login_imagebutton1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
