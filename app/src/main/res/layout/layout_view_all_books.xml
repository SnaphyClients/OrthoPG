<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:src="@drawable/sampleimage"
                android:adjustViewBounds="true"
                android:padding="15dp"
                android:id="@+id/layout_view_all_books_imageview1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_view_all_books_textview1"
                android:layout_toRightOf="@+id/layout_view_all_books_imageview1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Book Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_view_all_books_textview1"
                android:layout_toRightOf="@+id/layout_view_all_books_imageview1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="This is the description of book"
                android:maxLines="3"
                android:id="@+id/layout_view_all_books_textview2"
                />

